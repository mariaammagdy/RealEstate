@model BusinessLayer.DTOModels.UserDTO
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout1";
 // Specify your layout file here
}


<form asp-controller="Account" asp-action="Login" method="post">
                <img src="~/assets/img/avatar.svg" alt="">
                <h2 class="title">Welcome</h2>

                <!-- Input Email -->
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Email</h5>
            <input asp-for="Email" type="email" class="input" name="Email" required>
                    </div>
                </div>
                <!-- End Input Email -->
                <!-- Input Password -->
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
            <input asp-for="PasswordHash" type="password" class="input" name="Password" required>
                    </div>
                </div>
                <!-- End Input Password -->

                <a href="#">Forgot Password?</a>
                <input type="submit" class="btn" value="Login">
                <div class="text-center mt-3">
                    <p style="color: #999;" class="div">Don't have an account? <a asp-controller="Account" asp-action="Register">Register here</a></p>
                </div>
            </form>