@using BusinessLayer.DTOModels
@model IQueryable<PropertyDTO>

@{
    Layout = "_Layout"; // Specify the layout file
}

<h2>Properties</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Area (sq ft)</th>
                <th>Price ($)</th>
                <th>Available</th>
                <th>Occupied</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in Model)
            {
                <tr>
                    <td>@property.Name</td>
                    <td>@property.Type</td>
                    <td>@property.Area</td>
                    <td>@property.Price</td>
                    <td>@(property.IsAvailable ? "Yes" : "No")</td>
                    <td>@(property.IsOccupied ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No properties available.</p>
}
